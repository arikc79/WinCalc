<Window x:Class="WinCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCalc"
        mc:Ignorable="d"
        Title="WinCalc" Height="700" Width="1100">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="500*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230*"/>
            <ColumnDefinition Width="831*"/>
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Розрахунок вікна" Margin="216,10,0,0" RenderTransformOrigin="0.395,0.002" Grid.Column="1" Height="49" Width="208" FontSize="24" Grid.RowSpan="2"/>
        <Label Content="Стандартні вікна" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="140" Grid.Row="1"/>
        <Label Grid.Column="1" Content="Ширина:" Margin="8,412,0,0" Width="73" Height="31" Grid.Row="1"/>
        <Label Grid.Column="1" Content="Висота:" Margin="271,412,0,0" Height="31" Width="80" Grid.Row="1"/>
        <TextBox Grid.Column="1" Margin="10,443,0,0" Text="Ширина мм." Grid.Row="1" x:Name="txtWidth"/>
        <TextBox Grid.Column="1" Margin="271,443,0,0" Text="Висота мм." Grid.Row="1" x:Name="txtHeight"/>
        <Label Grid.Column="1" Content="Комплектація вікна" Margin="448,1,0,0" Width="248" FontSize="26" Height="45" Grid.Row="1"/>
        <!-- Переміщено до "Комплектація вікна" -->
        <Label Grid.Column="1" Content="Обрана конструкція" Margin="430,41,0,0" Width="160" Height="32" Grid.Row="1"/>
        <ComboBox Grid.Column="1" Margin="430,73,0,0" Grid.Row="1" x:Name="cmbWindowType"/>
        <!-- Переміщено до "Обрана конструкція" -->
        <Label Grid.Column="1" Content="Бренд - сортування по бренду" Margin="430,102,0,0" Grid.Row="1" Height="31" Width="395" RenderTransformOrigin="0.504,0.387"/>
        <ComboBox Grid.Column="1" Margin="430,133,0,0" Grid.Row="1" x:Name="cmbBrand" SelectionChanged="cmbBrand_SelectionChanged"/>
        <!-- Переміщено -->
        <Label Grid.Column="1" Content="Профіль - підберіть потрібний з профільних систем" Margin="426,166,0,0" Grid.Row="1" Height="31" Width="413" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Column="1" Margin="430,202,0,0" Grid.Row="1" x:Name="cmbProfile"/>
        <!-- Переміщено -->
        <Label Grid.Column="1" Content="Склопакет - оберіть бажаний" Margin="430,229,0,0" Grid.Row="1" Height="28" Width="262"/>
        <ComboBox Grid.Column="1" Margin="430,262,0,0" Grid.Row="1" x:Name="cmbGlassPack"/>
        <!-- Додано новий ComboBox для склопакета -->
        <Button Grid.Column="1" Content="Розрахувати вартість" Margin="430,333,0,0" Width="307" Height="35" Grid.Row="1" x:Name="btnCalculate" Click="btnCalculate_Click"/>
        <CheckBox Grid.Column="1" Content="Підвіконник" Margin="432,297,0,0" Grid.Row="1" x:Name="chkSill"/>
        <CheckBox Grid.Column="1" Content="Відлив" Margin="572,297,0,0" Grid.Row="1" x:Name="chkDrain"/>
        <Label Grid.Column="1" Content="За вибраними вами параметрами: --- вартість без встановлення ---" Margin="10,478,0,0" Grid.Row="1" Height="135" Width="740" x:Name="lblResult"/>

        <!-- ListBox з зображеннями -->
        <ListBox Grid.Row="1" Margin="8,52,20,10" x:Name="lstImages" SelectionChanged="lstImages_SelectionChanged">
            <ListBoxItem>
                <Image Height="104" Source="/Image/5.png" Stretch="Fill" Width="70" Margin="10" Tag="5"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Height="104" Source="/Image/4.png" Stretch="Fill" Width="127" Margin="10" Tag="4"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Height="104" Source="/Image/3.png" Stretch="Fill" Width="152" Margin="10" Tag="3"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Height="104" Source="/Image/2.png" Stretch="Fill" Width="162" Margin="10" Tag="2"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Height="104" Source="/Image/7.png" Stretch="Fill" Width="162" Margin="10" Tag="1"/>
            </ListBoxItem>
        </ListBox>

        <!-- Border з Image для відображення обраного зображення -->
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="0,61,631,415" Grid.RowSpan="2">
            <Image x:Name="imgSelected" Stretch="Uniform" RenderTransformOrigin="0.54,0.544" Margin="1,-1,-45,-44" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.352"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Border>
    </Grid>
</Window>