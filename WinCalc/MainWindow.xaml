<Window x:Class="WinCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCalc"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="WinCalc — Розрахунок вартості вікна"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontFamily="Segoe UI"
        TextElement.FontSize="14"
        ResizeMode="NoResize"
        WindowState="Maximized">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ====================== HEADER ====================== -->
        <materialDesign:ColorZone Grid.Row="0"
                                  Mode="PrimaryMid"
                                  CornerRadius="12"
                                  Padding="24"
                                  Margin="0,0,0,20">
            <DockPanel LastChildFill="True">
                <materialDesign:PackIcon Kind="CalculatorVariant"
                                          Width="40"
                                          Height="40"
                                          Foreground="White"
                                          Margin="0,0,16,0" />
                <StackPanel>
                    <TextBlock Text="Розрахунок вартості вікна"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="White" />
                    <TextBlock Text="Вкажіть параметри конструкції та отримайте миттєвий підрахунок"
                               Foreground="White"
                               Opacity="0.85" />
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- ====================== INPUTS SECTION ====================== -->
        <materialDesign:Card Grid.Row="1"
                             Padding="24"
                             Margin="0,0,0,20"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <StackPanel>
                <TextBlock Text="Параметри замовлення"
                           FontSize="20"
                           FontWeight="SemiBold" />
                <Separator Margin="0,12" />

                <DockPanel Margin="0,0,0,12" LastChildFill="True">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBox x:Name="txtWidth"
                                 Width="140"
                                 Margin="0,0,12,0"
                                 materialDesign:HintAssist.Hint="Ширина (мм)" />
                        <TextBox x:Name="txtHeight"
                                 Width="140"
                                 Margin="0,0,16,0"
                                 materialDesign:HintAssist.Hint="Висота (мм)" />
                        <Button x:Name="btnCalculate"
                                Content="Розрахувати"
                                Click="btnCalculate_Click"
                                Width="180"
                                Height="44" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="16,0,0,0"
                                DockPanel.Dock="Right">
                        <Button x:Name="btnMaterials"
                                Content="Каталог матеріалів"
                                Width="160"
                                Height="36"
                                Margin="0,0,8,0"
                                Click="btnMaterials_Click" />
                        <Button x:Name="btnManageUsers"
                                Content="Користувачі"
                                Width="140"
                                Height="36"
                                Margin="0,0,8,0"
                                Click="btnManageUsers_Click" />
                        <Button x:Name="btnExportCsv"
                                Content="Експорт CSV"
                                Width="140"
                                Height="36"
                                Click="btnExportPdf_Click" />
                    </StackPanel>
                </DockPanel>

                <WrapPanel Margin="0,0,0,12">
                    <ComboBox x:Name="cmbWindowType"
                              Width="200"
                              Margin="0,0,12,12"
                              SelectionChanged="cmbWindowType_SelectionChanged"
                              materialDesign:HintAssist.Hint="Тип вікна" />
                    <ComboBox x:Name="cmbBrand"
                              Width="200"
                              Margin="0,0,12,12"
                              materialDesign:HintAssist.Hint="Бренд профілю" />
                    <ComboBox x:Name="cmbProfileThickness"
                              Width="200"
                              Margin="0,0,12,12"
                              materialDesign:HintAssist.Hint="Товщина профілю" />
                    <ComboBox x:Name="cmbSashCount"
                              Width="120"
                              SelectedIndex="0"
                              Margin="0,0,12,12"
                              materialDesign:HintAssist.Hint="Створки">
                        <ComboBoxItem Content="1" />
                        <ComboBoxItem Content="2" />
                    </ComboBox>
                </WrapPanel>

                <WrapPanel Margin="0,0,0,12">
                    <ComboBox x:Name="cmbGlassPack"
                              Width="200"
                              Margin="0,0,12,12"
                              materialDesign:HintAssist.Hint="Склопакет" />
                    <CheckBox x:Name="chkMosquito"
                              Content="Москітна сітка"
                              VerticalAlignment="Center"
                              Margin="0,8,12,12" />
                </WrapPanel>

                <UniformGrid Columns="3" Margin="0,8,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <materialDesign:Card Margin="0,0,16,0" Padding="12" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <StackPanel>
                            <TextBlock Text="Ручка"
                                       FontSize="16"
                                       FontWeight="SemiBold" />
                            <RadioButton x:Name="rbHandleStandard" Content="Стандартна" IsChecked="True" Margin="0,8,0,0" />
                            <RadioButton x:Name="rbHandlePremium" Content="Преміум" />
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Margin="0,0,16,0" Padding="12" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <StackPanel>
                            <TextBlock Text="Підвіконня"
                                       FontSize="16"
                                       FontWeight="SemiBold" />
                            <RadioButton x:Name="rbSill200" Content="200 мм" IsChecked="True" Margin="0,8,0,0" />
                            <RadioButton x:Name="rbSill300" Content="300 мм" />
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Padding="12" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <StackPanel>
                            <TextBlock Text="Відлив"
                                       FontSize="16"
                                       FontWeight="SemiBold" />
                            <RadioButton x:Name="rbDrain150" Content="150 мм" IsChecked="True" Margin="0,8,0,0" />
                            <RadioButton x:Name="rbDrain200" Content="200 мм" />
                        </StackPanel>
                    </materialDesign:Card>
                </UniformGrid>
            </StackPanel>
        </materialDesign:Card>

        <!-- ====================== WINDOW PREVIEW ====================== -->
        <materialDesign:Card Grid.Row="2"
                             Padding="24"
                             Margin="0,0,0,20"
                             materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <StackPanel>
                <TextBlock Text="Попередній перегляд"
                           FontSize="20"
                           FontWeight="SemiBold" />
                <Separator Margin="0,12" />
                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" CornerRadius="8" Padding="16" Background="{DynamicResource MaterialDesignPaper}" Width="260" HorizontalAlignment="Left">
                    <Image x:Name="imgPreview"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Height="200"
                           Source="/WinCalc;component/Image/1.png" />
                </Border>
            </StackPanel>
        </materialDesign:Card>

        <!-- ====================== RESULT SECTION ====================== -->
        <materialDesign:Card Grid.Row="3"
                             Padding="24"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <StackPanel>
                <TextBlock Text="Результат розрахунку"
                           FontSize="20"
                           FontWeight="SemiBold" />
                <Separator Margin="0,12" />
                <Border Background="{DynamicResource MaterialDesignPaper}"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="120"
                        Padding="12">
                    <TextBlock x:Name="lblResult"
                               Text="Введіть параметри та натисніть 'Розрахувати'"
                               TextWrapping="Wrap"
                               FontSize="14" />
                </Border>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
    
    
