<Window x:Class="WinCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCalc"
        mc:Ignorable="d"
        Title="WinCalc — Розрахунок вартості вікна"
        Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ====================== HEADER ====================== -->
        <TextBlock Text="Розрахунок вартості віконна"
                   FontSize="22" FontWeight="Bold" Foreground="#333"
                   Margin="0,0,0,10"/>

        <!-- ====================== INPUTS SECTION ====================== -->
        <Border Grid.Row="1" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
            <!-- FIX: Remove unsupported Spacing property and use Margin on child elements instead -->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Ширина (мм):" Width="120" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <TextBox x:Name="txtWidth" Width="100" Height="25" Margin="0,0,0,0"/>
                    <TextBlock Text="Висота (мм):" Width="100" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBox x:Name="txtHeight" Width="100" Height="25" Margin="0,0,0,0"/>
                    <Button x:Name="btnCalculate"
                            Content="Розрахувати"
                            Click="btnCalculate_Click"
                            Width="150" Height="30" Margin="30,0,0,0"/>
                </StackPanel>
                
                
                
                
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Тип вікна:" Width="120" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <ComboBox x:Name="cmbWindowType" Width="180" Margin="0,0,0,0" SelectionChanged="cmbWindowType_SelectionChanged"/>

                    <TextBlock Text="Бренд профілю:" Width="120" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="cmbBrand" Width="180" Margin="0,0,0,0"/>

                    <TextBlock Text="Товщина профілю:" Width="140" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="cmbProfileThickness" Width="120" Margin="0,0,0,0"/>

                    <TextBlock Text="Кількість створок:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <ComboBox x:Name="cmbSashCount" Width="60" SelectedIndex="0">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Склопакет:" Width="120" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <ComboBox x:Name="cmbGlassPack" Width="150" Margin="0,0,0,0"/>
                    <CheckBox x:Name="chkMosquito" Content="Москітна сітка" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <GroupBox Header="Ручка" Padding="5" Width="180" Margin="0,0,15,0">
                        <StackPanel>
                            <RadioButton x:Name="rbHandleStandard" Content="Стандартна" IsChecked="True"/>
                            <RadioButton x:Name="rbHandlePremium" Content="Преміум"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Підвіконня" Padding="5" Width="180" Margin="0,0,15,0">
                        <StackPanel>
                            <RadioButton x:Name="rbSill200" Content="200 мм" IsChecked="True"/>
                            <RadioButton x:Name="rbSill300" Content="300 мм"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Відлив" Padding="5" Width="180">
                        <StackPanel>
                            <RadioButton x:Name="rbDrain150" Content="150 мм" IsChecked="True"/>
                            <RadioButton x:Name="rbDrain200" Content="200 мм"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

            </StackPanel>
        </Border>

      
        <!-- ====================== WINDOW PREVIEW ====================== -->
        <GroupBox Header="Попередній перегляд" Grid.Row="2" Margin="0,0,0,10" Padding="8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8" HorizontalAlignment="Right">
                    <Button x:Name="btnMaterials"
                    Content="Каталог матеріалів"
                    Width="150"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="btnMaterials_Click"/>

                    <Button x:Name="btnManageUsers"
                    Content="Користувачі"
                    Click="btnManageUsers_Click"
                    Width="130" Height="28" Margin="0,0,10,0"/>

                  

                    <Button x:Name="btnExportCsv"
                    Content="Експорт CSV"
                    Click="btnExportCsv_Click"
                    Width="120" Height="28" Margin="0,0,10,0"/>
                </StackPanel>

                <!-- 🖼️ Зображення попереднього перегляду -->
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="10" Background="White">
                    <Image x:Name="imgPreview"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="187"
                   Source="/WinCalc;component/Image/1.png"/>
                </Border>
            </DockPanel>
        </GroupBox>


        <!-- ====================== RESULT SECTION ====================== -->
        <Border Grid.Row="3" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Результат розрахунку:" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                <Border BorderBrush="#DDD" BorderThickness="1" Background="#FFF" Height="100" Padding="0">
                    <TextBlock x:Name="lblResult"
                               Text="Введіть параметри та натисніть 'Розрахувати'"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#444"
                               Padding="10"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
