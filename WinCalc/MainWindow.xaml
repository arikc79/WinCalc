<Window x:Class="WinCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WinCalc" Height="700" Width="1100"
        MinHeight="700" MinWidth="1100"
        MaxHeight="900" MaxWidth="1600">

    <Grid>
        <TabControl Grid.Row="1" Grid.Column="1" Margin="10">

            <!-- Вкладка: Розрахунок -->
            <TabItem Header="Розрахунок">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="49*"/>
                        <RowDefinition Height="500*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230*"/>
                        <ColumnDefinition Width="831*"/>
                        <ColumnDefinition Width="39*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Розрахунок вікна" Grid.Column="1" FontSize="24" 
                           Margin="216,10,0,0" Height="49" Width="208" Grid.RowSpan="2"/>

                    <Label Content="Ширина:" Grid.Column="1" Margin="8,412,0,0" Width="73" Height="31" Grid.Row="1"/>
                    <TextBox x:Name="txtWidth" Grid.Column="1" Margin="10,443,0,0" Text="Ширина мм." Grid.Row="1"/>

                    <Label Content="Висота:" Grid.Column="1" Margin="271,412,0,0" Height="31" Width="80" Grid.Row="1"/>
                    <TextBox x:Name="txtHeight" Grid.Column="1" Margin="271,443,0,0" Text="Висота мм." Grid.Row="1"/>

                    <Label Content="Комплектація вікна" Grid.Column="1" HorizontalAlignment="Center"
                           Margin="448,1,0,0" Width="248" FontSize="26" Height="45" Grid.Row="1"/>

                    <Label Content="Обрана конструкція" Grid.Column="1" Margin="430,41,0,0" Width="160" Height="32" Grid.Row="1"/>
                    <ComboBox x:Name="cmbWindowType" Grid.Column="1" Margin="430,73,0,0" Grid.Row="1"/>

                    <Label Content="Бренд" Grid.Column="1" Margin="430,102,0,0" Height="31" Width="243"/>
                    <ComboBox x:Name="cmbBrand" Grid.Column="1" Margin="430,133,0,0" 
                              SelectionChanged="cmbBrand_SelectionChanged" Grid.Row="1"/>

                    <Label Content="Профіль" Grid.Column="1" Margin="426,166,0,0" Height="31" Width="236"/>
                    <ComboBox x:Name="cmbProfile" Grid.Column="1" Margin="430,202,0,0" Grid.Row="1"/>

                    <Label Content="Склопакет" Grid.Column="1" Margin="430,229,0,0" Height="28" Width="232"/>
                    <ComboBox x:Name="cmbGlassPack" Grid.Column="1" Margin="430,262,0,0" Grid.Row="1"/>

                    <Button x:Name="btnCalculate" Content="Розрахувати вартість" Grid.Column="1" 
                            Margin="465,372,39,0" Width="307" Height="35" Grid.Row="1"
                            Click="btnCalculate_Click"/>

                    <CheckBox x:Name="chkSill" Content="Підвіконник" Grid.Column="1" Margin="432,297,0,0" Grid.Row="1"/>
                    <CheckBox x:Name="chkDrain" Content="Відлив" Grid.Column="1" Margin="709,323,277,0" Grid.Row="1"/>

                    <Label x:Name="lblResult" Content="За вибраними параметрами: ---"
                           Grid.Column="1" Margin="10,478,0,0" Grid.Row="1" Height="135" Width="740"/>

                    <!-- Список зображень -->
                    <ListBox x:Name="lstImages" Grid.Row="1" Grid.Column="0" Margin="8,52,20,10"
                             SelectionChanged="lstImages_SelectionChanged">
                        <ListBoxItem>
                            <Image Height="104" Source="/WinCalc;component/Image/5.png" Stretch="Fill" Width="70" Margin="10" Tag="5"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Image Height="104" Source="/WinCalc;component/Image/4.png" Stretch="Fill" Width="127" Margin="10" Tag="4"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Image Height="104" Source="/WinCalc;component/Image/3.png" Stretch="Fill" Width="152" Margin="10" Tag="3"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Image Height="104" Source="/WinCalc;component/Image/2.png" Stretch="Fill" Width="162" Margin="10" Tag="2"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Image Height="104" Source="/WinCalc;component/Image/7.png" Stretch="Fill" Width="162" Margin="10" Tag="1"/>
                        </ListBoxItem>
                    </ListBox>

                    <Button x:Name="btnTestCrud" Content="Test CRUD" Grid.Column="1"
                            Margin="466,427,38,0" Width="307" Height="35" Grid.Row="1"
                            Click="btnTestCrud_Click"/>

                    <!-- Головне зображення -->
                    <Border x:Name="borderWithImage" BorderBrush="Black" BorderThickness="1"
                            Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left"
                            Width="395" Height="358" Margin="10,10,0,0">
                        <Image x:Name="imgSelected" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Вкладка: Матеріали -->
            <TabItem Header="Матеріали">
                <Grid>
                    <DataGrid x:Name="dgMaterials"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              Margin="10"
                              CellEditEnding="dgMaterials_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Категорія" Binding="{Binding Category}" Width="120"/>
                            <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Колір" Binding="{Binding Color}" Width="100"/>
                            <DataGridTextColumn Header="Ціна (грн)" Binding="{Binding Price}" Width="120"/>
                            <DataGridTextColumn Header="Одиниця" Binding="{Binding Unit}" Width="80"/>
                            <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка: Користувачі (тільки для Admin) -->
            <TabItem Header="Користувачі" Tag="AdminOnly">
                <Grid>
                    <DataGrid x:Name="dgUsers"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              Margin="10"
                              RowEditEnding="dgUsers_RowEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Логін" Binding="{Binding Username}" Width="150"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                            <DataGridTextColumn Header="Пароль" Binding="{Binding PasswordHash}" Width="150"/>
                            <DataGridTextColumn Header="Пароль (введіть новий — буде захешовано)"
                                                Binding="{Binding PasswordHash}" Width="220"/>


                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
