<Window x:Class="WinCalc.SimpleInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Введення даних" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <Border BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="lblQuestion" Text="Введіть значення:" 
                       FontSize="16" FontWeight="Medium" TextWrapping="Wrap"/>

            <TextBox x:Name="txtAnswer" Grid.Row="1" 
                     VerticalAlignment="Center" 
                     FontSize="16"
                     materialDesign:HintAssist.Hint="Ваша відповідь"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Скасувати" IsCancel="True" Style="{StaticResource MaterialDesignFlatButton}" Click="BtnCancel_Click"/>
                <Button Content="ОК" IsDefault="True" Style="{StaticResource MaterialDesignRaisedButton}" Margin="10,0,0,0" Click="BtnOk_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>