<Window x:Class="WinCalc.MaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        Title="Редагування матеріалів"
        MinHeight="650" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Каталог матеріалів"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="10,0,0,10"
                   Foreground="{DynamicResource MaterialDesignBody}" />

        <DataGrid x:Name="dgMaterials"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Margin="0,10,0,10"
                  RowHeaderWidth="0"
                  AlternatingRowBackground="{DynamicResource MaterialDesignCardBackground}"
                  Background="{DynamicResource MaterialDesignPaper}"
                  Foreground="{DynamicResource MaterialDesignBody}"
                  materialDesign:DataGridAssist.CellPadding="10"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="10"
                  Style="{StaticResource MaterialDesignDataGrid}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="40"/>
                <DataGridTextColumn Header="Категорія" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Колір" Binding="{Binding Color}" Width="100"/>
                <DataGridTextColumn Header="Ціна, ₴" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Од. виміру" Binding="{Binding Unit}" Width="80"/>
                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <UniformGrid Grid.Row="2" Rows="1" Margin="0,10,0,0">

            <Button x:Name="btnSave"
                    Style="{StaticResource NeonButtonStyle}"
                    Height="35" Margin="5"
                    Click="btnSave_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ContentSave" Width="20" Height="20" Margin="0,0,6,0"/>
                    <TextBlock Text="Зберегти зміни"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnImportCsv"
                    Style="{StaticResource NeonButtonStyle}"
                    Height="35" Margin="5"
                    Click="btnImportCsv_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="FileImportOutline" Width="20" Height="20" Margin="0,0,6,0"/>
                    <TextBlock Text="Імпорт CSV"/>
                </StackPanel>
            </Button>

            <Button x:Name="AddMateria"
                    Style="{StaticResource NeonButtonStyle}"
                    Height="35" Margin="5"
                    Click="btnAdd_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="PlusBoxOutline" Width="20" Height="20" Margin="0,0,6,0"/>
                    <TextBlock Text="Додати матеріал"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnClose"
                    Height="35" Margin="5"
                    Style="{StaticResource NeonButtonStyle}"
                    Click="btnClose_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Margin="0,0,6,0"/>
                    <TextBlock Text="Закрити"/>
                </StackPanel>
            </Button>

        </UniformGrid>
        <Image Grid.RowSpan="3" 
               Source="pack://application:,,,/WinCalc;component/Image/logo3.png" Stretch="Uniform"
               Opacity="0.08"  
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="600"
               IsHitTestVisible="False" />
    </Grid>
</Window>