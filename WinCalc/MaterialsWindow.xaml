<Window x:Class="WinCalc.MaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування матеріалів"
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FFF8F8F8">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔹 Заголовок -->
        <TextBlock Text="Каталог матеріалів"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="10,0,0,10"/>

        <!-- 🔹 Таблиця матеріалів -->
        <DataGrid x:Name="dgMaterials"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Margin="0,10,0,10"
                  RowHeaderWidth="0"
                  AlternatingRowBackground="#FFEFEFEF">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="40"/>
                <DataGridTextColumn Header="Категорія" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Колір" Binding="{Binding Color}" Width="100"/>
                <DataGridTextColumn Header="Ціна, ₴" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Од. виміру" Binding="{Binding Unit}" Width="80"/>
                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 🔹 Панель керування -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSave" Content="💾 Зберегти зміни" Width="160" Height="35" Margin="5" Click="btnSave_Click"/>
            <Button x:Name="AddMateria" Content="➕ Додати матеріал" Width="160" Height="35" Margin="5" Click="btnAdd_Click"/>
            <Button x:Name="btnClose" Content="Закрити" Width="120" Height="35" Margin="5" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
