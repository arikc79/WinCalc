<Window x:Class="WinCalc.MaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        Title="Редагування матеріалів"
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔹 Заголовок -->
        <TextBlock Text="Каталог матеріалів"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="10,0,0,10"
                   Foreground="{DynamicResource MaterialDesignBody}" />

        <!-- 🔹 Таблиця матеріалів -->
        <DataGrid x:Name="dgMaterials"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Margin="0,10,0,10"
                  RowHeaderWidth="0"
                  AlternatingRowBackground="{DynamicResource MaterialDesignCardBackground}"
                  Background="{DynamicResource MaterialDesignPaper}"
                  Foreground="{DynamicResource MaterialDesignBody}"
                  materialDesign:DataGridAssist.CellPadding="10"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="10"
                  Style="{StaticResource MaterialDesignDataGrid}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="40"/>
                <DataGridTextColumn Header="Категорія" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Колір" Binding="{Binding Color}" Width="100"/>
                <DataGridTextColumn Header="Ціна, ₴" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Од. виміру" Binding="{Binding Unit}" Width="80"/>
                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 🔹 Панель керування -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

            <!-- 💾 Зберегти -->
            <Button x:Name="btnSave"
                    Width="160" Height="35" Margin="5"
                    Click="btnSave_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="#FF32BC3F" Foreground="#FF178324">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ContentSave" Width="20" Height="20" Margin="0,0,6,0"/>
                    <TextBlock Text="Зберегти зміни"/>
                </StackPanel>
            </Button>

            <!-- 📥 Імпорт CSV -->
            <Button x:Name="btnImportCsv"
                    Width="160" Height="35" Margin="5"
                    Click="btnImportCsv_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="#FF32BC3F" Foreground="#FF178324">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="FileImportOutline" Width="20" Height="20" Margin="0,0,6,0"/>
                    <TextBlock Text="Імпорт CSV" Foreground="#FF099600"/>
                </StackPanel>
            </Button>

            <!-- ➕ Додати -->
            <Button x:Name="AddMateria"
                    Width="160" Height="35" Margin="5"
                    Click="btnAdd_Click"
                   Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="#FF32BC3F" Foreground="#FF178324">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="PlusBoxOutline" Width="20" Height="20" Margin="0,0,6,0"/>
                    <TextBlock Text="Додати матеріал"/>
                </StackPanel>
            </Button>

            <!-- ❌ Закрити -->
            <Button x:Name="btnClose"
                    Width="120" Height="35" Margin="5"
                    Click="btnClose_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="#FF32BC3F" Foreground="#FF178324">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Margin="0,0,6,0"/>
                    <TextBlock Text="Закрити"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
