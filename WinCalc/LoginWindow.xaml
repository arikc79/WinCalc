<Window x:Class="WinCalc.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід" Height="240" Width="380" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="16" VerticalAlignment="Center">
        <TextBlock Text="Логін" />
        <TextBox x:Name="TbLogin" Margin="0,4,0,8"/>

        <TextBlock Text="Пароль" />
        <PasswordBox x:Name="TbPass" Margin="0,4,0,12"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Створити менеджера" Margin="0,0,8,0" Click="CreateManager_Click"/>
            <Button Content="Ввійти" Width="90" Click="Login_Click"/>
        </StackPanel>

        <TextBlock x:Name="LblStatus" Foreground="Red" Margin="0,10,0,0"/>
    </StackPanel>
</Window>

