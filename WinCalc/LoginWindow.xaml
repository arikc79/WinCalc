<Window x:Class="WinCalc.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизація користувача"
        Height="350" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D2D"
        
        FontFamily="Segoe UI">

    <Grid Margin="15">
        <!-- Основний контейнер -->
        <Border Padding="15"
                BorderBrush="#FF737373"
                BorderThickness="1"
                CornerRadius="6"
                Background="#2D2D2D"
                HorizontalAlignment="Center" Width="318" Margin="0,2,0,2">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="220">

                <!-- Заголовок -->
                <TextBlock Text="Вхід у систему"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0" Height="35"/>

                <!-- Поле логіну -->
                <StackPanel Margin="0,0,0,10" Height="62">
                    <TextBlock Text="Логін:"
                               FontWeight="SemiBold"
                               Foreground="#CCCCCC"
                               Margin="0,0,0,3"
                               HorizontalAlignment="Left"/>

                    <TextBox x:Name="txtUsername"
                                Width="240"
                                Height="38"
                                Background="#252525"
                                Foreground="#E0E0E0"
                                BorderBrush="#00BCD4"
                                CaretBrush="White"
                                FontSize="18"
                                HorizontalAlignment="Center"/>

                </StackPanel>

                <!-- Поле паролю -->
                <StackPanel Margin="0,0,0,10" Height="51">
                    <TextBlock Text="Пароль:"
                               FontWeight="SemiBold"
                               Foreground="#CCCCCC"
                               Margin="0,0,0,3"
                               HorizontalAlignment="Left"/>
                    <PasswordBox x:Name="txtPassword"
                                 Width="240"
                                 Height="32"
                                  FontSize="12"
                                 Background="#1E1E1E"
                                 Foreground="#FFFFFF"
                                 BorderBrush="#666"
                                 CaretBrush="White"
                                 HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Горизонтальний блок кнопок -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    
                    <Button x:Name="btnCreateManager"
                            Content="Створити менеджера"
                            Width="170"
                            Height="30"
                            Margin="0,0,5,0"
                            Background="#FF2B352B"
                         
                            BorderBrush="#5A5A5A"
                            Click="CreateManager_Click"/>
                    <Button x:Name="btnLogin"
                            Content="Увійти"
                            Width="98"
                            Height="30"
                            Background="#FF2B352B"
                           
                            BorderBrush="#5A5A5A"
                            Click="btnLogin_Click"/>
                </StackPanel>

                <!-- Статус -->
                <TextBlock x:Name="LblStatus"
                           Text=""
                           Foreground="#FF6666"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- 🔵 Кнопка довідки -->
        <Button x:Name="btnHelp"
                Content="?"
                Width="20"
                Height="20"
                FontWeight="Bold"
                FontSize="15"
                Background="#1976D2"
                Foreground="White"
                BorderBrush="{x:Null}"
                Cursor="Hand"
                ToolTip="Відкрити довідку (F1)"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,10,10"
                Click="btnHelp_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.6" />
                        </Border.Effect>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2196F3"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#1565C0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
