<Window x:Class="WinCalc.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизація користувача"
        Height="260" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        FontFamily="Segoe UI">

    <Border Margin="15,10,15,15" Padding="15" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Background="White">
        <StackPanel VerticalAlignment="Top" Height="219" Margin="0,-16,0,0">

            <TextBlock Text="Вхід у систему" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5" Height="27"/>

            <!-- ЛОГІН -->
            <TextBlock Text="Логін:" FontWeight="SemiBold" Margin="0,0,0,3"/>
            <TextBox x:Name="txtUsername" 
                     Width="240" 
                     Height="26"
                     Margin="0,0,0,10"
                     HorizontalAlignment="Center"/>

            <!-- ПАРОЛЬ -->
            <TextBlock Text="Пароль:" FontWeight="SemiBold" Margin="0,0,0,3"/>
            <PasswordBox x:Name="txtPassword" 
                         Width="240" 
                         Height="26"
                         HorizontalAlignment="Center"/>

            <!-- КНОПКИ -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,14,0,0">
                <Button x:Name="btnCreateManager"
                        Content="Створити менеджера"
                        Width="150" Height="28"
                        Margin="0,0,10,0"
                        Click="CreateManager_Click"/>
                <Button x:Name="btnLogin"
                        Content="Увійти"
                        Width="100" Height="28"
                        Click="btnLogin_Click"/>
            </StackPanel>

            <!-- СТАТУС -->
            <TextBlock x:Name="LblStatus"
                       Text=""
                       Foreground="Red"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Margin="0,12,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window>
