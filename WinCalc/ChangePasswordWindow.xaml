<Window x:Class="WinCalc.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Змінити пароль"
        Height="210"
        Width="340"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D2D"
        Foreground="#FFFFFF">

    <Window.Resources>
        <Style x:Key="TealButton" TargetType="Button">
            <Setter Property="Background" Value="#00BCD4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Color="#000000" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="6,3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#26C6DA"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" Color="#00BCD4" Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0097A7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#2D2D2D" Padding="16" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Користувач:" Margin="0,0,8,10" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtUser" Grid.Column="1" Margin="0,0,0,10" FontWeight="Bold" Foreground="#00BCD4"/>

            <TextBlock Text="Новий пароль:" Grid.Row="1" Margin="0,0,8,8" VerticalAlignment="Center"/>
            <PasswordBox x:Name="pb1" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                         Background="#1E1E1E" Foreground="#FFFFFF"
                         BorderBrush="#00BCD4" CaretBrush="White" FontSize="14"/>

            <TextBlock Text="Повторіть пароль:" Grid.Row="2" Margin="0,0,8,8" VerticalAlignment="Center"/>
            <PasswordBox x:Name="pb2" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"
                         Background="#1E1E1E" Foreground="#FFFFFF"
                         BorderBrush="#00BCD4" CaretBrush="White" FontSize="14"/>

            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="OK" Width="110" Margin="0,0,8,0" Click="Ok_Click" Style="{StaticResource TealButton}"/>
                <Button Content="Скасувати" Width="110" Click="Cancel_Click" Style="{StaticResource TealButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>


