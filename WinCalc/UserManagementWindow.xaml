<Window x:Class="WinCalc.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        Title="Керування користувачами"
        MinHeight="480"
        MinWidth="1050"
        Background="#2B2B2B"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>

        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#EEEEEE"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="RowBackground" Value="#2B2B2B"/>
            <Setter Property="AlternatingRowBackground" Value="#333333"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>

        <Style x:Key="RolesComboItemsStyle" TargetType="ComboBoxItem">
            <Setter Property="OverridesDefaultStyle" Value="True"/>

            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2B2B2B"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="3,1">
                            <ContentPresenter Margin="5,1"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="#444444"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="#555555"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Керування користувачами" 
                   Style="{StaticResource HeaderText}" />

        <UniformGrid Grid.Row="0" Rows="1" Margin="0,40,0,15">

            <Button x:Name="btnAddUser"
                    Style="{StaticResource NeonButtonStyle}"
                    Content="➕ Додати користувача"
                    Margin="5" 
                    Click="btnAddUser_Click" Background="#FF198593"/>

            <Button x:Name="btnChangePassword"
                    Style="{StaticResource NeonButtonStyle}"
                    Content="🔑 Змінити пароль"
                    Margin="5"
                    Click="btnChangePassword_Click" Background="#FF198593"/>

            <Button x:Name="btnDeleteUser"
                    Style="{StaticResource NeonButtonStyle}"
                    Content="🗑️ Видалити користувача"
                    Margin="5"
                    Click="btnDeleteUser_Click" Background="#FF198593"/>

            <Button x:Name="btnRefresh"
                    Style="{StaticResource NeonButtonStyle}"
                    Content="🔄 Оновити"
                    Margin="5"
                    Click="btnRefresh_Click" Background="#FF198593"/>

        </UniformGrid>

        <DataGrid x:Name="dgUsers"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  RowEditEnding="dgUsers_RowEditEnding"
                  Margin="0,2,0,8"
                  AlternationCount="2">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader"
                       BasedOn="{StaticResource {x:Type DataGridColumnHeader}}"/>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Логін" Binding="{Binding Username}" Width="*"/>

                <DataGridComboBoxColumn Header="Роль"
                                        Width="160"
                                        SelectedItemBinding="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=RolesList}"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Focusable" Value="False"/>

                            <Setter Property="Background" Value="#2B2B2B"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="ItemContainerStyle"
                                    Value="{StaticResource RolesComboItemsStyle}"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>

                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=RolesList}"/>

                            <Setter Property="Background" Value="#2B2B2B"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="ItemContainerStyle"
                                    Value="{StaticResource RolesComboItemsStyle}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>

                </DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Закрити"
                    Style="{StaticResource NeonButtonStyle}"
                    Width="200"
                    Click="Close_Click" Background="#FF198593"/>
        </StackPanel>

        <Image Grid.RowSpan="3" 
               Source="pack://application:,,,/WinCalc;component/Image/logo3.PNG"
               Stretch="Uniform"
               Opacity="0.08"  
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="600"
               IsHitTestVisible="False" />
    </Grid>
</Window>
