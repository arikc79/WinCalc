<Window x:Class="WinCalc.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Керування користувачами"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Панель керування користувачами"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,10"/>

        <!-- DATAGRID USERS -->
        <DataGrid x:Name="dgUsers"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  AlternatingRowBackground="#F7F7F7"
                  GridLinesVisibility="Horizontal"
                  Margin="0,0,0,10"
                  HeadersVisibility="Column"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="Логін" Binding="{Binding Username}" Width="2*"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ACTION BUTTONS -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="btnAddUser"
                    Content="➕ Додати користувача"
                    Click="btnAddUser_Click"
                    Width="170" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="btnChangePassword"
                    Content="🔑 Змінити пароль"
                    Click="btnChangePassword_Click"
                    Width="150" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="btnDeleteUser"
                    Content="🗑️ Видалити користувача"
                    Click="btnDeleteUser_Click"
                    Width="150" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="btnRefresh"
                    Content="🔄 Оновити"
                    Click="btnRefresh_Click"
                    Width="120" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
