<Window x:Class="WinCalc.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Керування користувачами"
        Height="460" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔹 Панель керування -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnAddUser" Content="➕ Додати користувача" Width="160" Margin="0,0,10,0" Click="btnAddUser_Click"/>
            <Button x:Name="btnChangePassword" Content="🔑 Змінити пароль" Width="150" Margin="0,0,10,0" Click="btnChangePassword_Click"/>
            <Button x:Name="btnDeleteUser" Content="🗑️ Видалити користувача" Width="160" Margin="0,0,10,0" Click="btnDeleteUser_Click"/>
            <Button x:Name="btnRefresh" Content="🔄 Оновити" Width="120" Click="btnRefresh_Click"/>
        </StackPanel>

        <!-- 🔹 Таблиця користувачів -->
        <DataGrid x:Name="dgUsers"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  RowEditEnding="dgUsers_RowEditEnding"
                  Margin="0,0,0,10"
                  AlternationCount="2"
                  AlternatingRowBackground="#FFEFEFEF">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Логін" Binding="{Binding Username}" Width="*"/>

                <!-- 🔹 Колонка ролей -->
                <DataGridComboBoxColumn Header="Роль"
                                        Width="150"
                                        SelectedItemBinding="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=RolesList}"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=RolesList}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>

                <!-- ❌ Видалено стовпець “Пароль (хеш)” -->
            </DataGrid.Columns>
        </DataGrid>

        <!-- 🔹 Кнопка закриття -->
        <Button Grid.Row="2" Content="Закрити" Width="100" HorizontalAlignment="Right"
                Click="Close_Click"/>
    </Grid>
</Window>
